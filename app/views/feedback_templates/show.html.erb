<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Feedback #<%= @feedback.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/feedbacks" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link feedback start -->
      <div class="col">
        <% if current_user == @feedback.user %>
          <a href="/feedbacks/<%= @feedback.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit feedback
          </a>
        <% end %>
      </div>
      <!-- Edit link feedback end -->

      <!-- Delete link feedback start -->
      <div class="col">
        <% if current_user == @feedback.user %>
          <a href="/delete_feedback/<%= @feedback.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete feedback
          </a>
        <% end %>
      </div>
      <!-- Delete link feedback end -->
    </div>

    <dl>
      <dt>
        User
      </dt>
      <!-- Display user_id start -->
      <dd>
        <% if @feedback.user.present? %>
          <a href="/users/<%= @feedback.user_id %>">
            <%= @feedback.user.email %>
          </a>
        <% end %>
      </dd>
      <!-- Display user_id end -->

      <dt>
        Comments
      </dt>
      <!-- Display comments start -->
      <dd>
        <%= @feedback.comments %>
      </dd>
      <!-- Display comments end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@feedback.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@feedback.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

